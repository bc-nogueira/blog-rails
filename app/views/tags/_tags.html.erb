<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col" class="col-1">Name</th>
      <th scope="col" class="col-1">Color</th>
      <th scope="col" class="col-1"></th>
    </tr>
    </thead>
    <tbody>
    <% tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
        <span class="badge" style="width: 75px; background-color: <%= tag.color %>">
          <%= tag.color %>
        </span>
        </td>
        <td class="">
          <% if user_signed_in? && current_user == tag.user %>
            <div class="d-flex align-items-center justify-content-end gap-2">
              <%= link_to 'Edit', edit_tag_path(tag), class: 'btn btn-sm btn-primary' %>
              <%= button_to 'Destroy', tag_path(tag), method: :delete, class: 'btn btn-sm btn-danger', form: { data: { turbo_confirm: "Are you sure?" } } %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>

<%== pagy_bootstrap_nav(pagy) %>