<div class="d-flex align-items-center justify-content-between">
  <h1><%= @post.title %></h1>

  <% if user_signed_in? && current_user == @post.author %>
    <div class="d-flex align-items-center gap-2">
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' %>
      <%= button_to 'Destroy', post_path(@post), method: :delete, class: 'btn btn-danger', form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  <% end %>
</div>

<div class="fw-light text-secondary">by <%= @post.author_name %></div>
<div class="fw-light text-secondary">at <%= @post.created_at.strftime('%H:%M %d/%m/%Y') %></div>
<p class="mt-3"><%= @post.content %></p>