<% @posts.each do |post| %>
  <div class="mb-3">
    <h3 class="mb-0"><%= link_to post.title, post_path(post) %></h3>
    <div class="fw-lighter" style="font-size: 0.8rem">by <%= post.author_name %></div>
    <div class="fw-lighter" style="font-size: 0.8rem">at <%= post.created_at.strftime('%H:%M %d/%m/%Y') %></div>
    <p class="mt-3"><%= post.content %></p>

    <% if user_signed_in? && current_user == post.author %>
      <div class="d-flex gap-2">
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary btn-sm' %>
        <%= button_to 'Destroy', post_path(post), method: :delete, class: 'btn btn-danger btn-sm', form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    <% end %>
  </div>
<% end %>