<% posts.each do |post| %>
  <div class="mb-3">
    <h3 class="mb-0"><%= link_to post.title, post_path(post) %></h3>
    <div class="fw-lighter" style="font-size: 0.8rem"><%= "by #{post.author_name} at #{post.created_at.strftime('%H:%M %d/%m/%Y')}" %></div>

    <% if post.tags.present? %>
      <% post.tags.each do |tag| %>
        <span class="badge" style="background-color: <%= tag.color %>">
          <%= tag.name %>
        </span>
      <% end %>
    <% end %>

    <p class="mt-3"><%= post.content %></p>

    <div class="fw-lighter" style="font-size: 0.9rem">
      <%= pluralize(post.comments.size, 'comment') %>
    </div>
  </div>
<% end %>

